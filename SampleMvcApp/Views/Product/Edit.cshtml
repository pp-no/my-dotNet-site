<div class="container mt-4">
    <h1 class="mb-4">商品編集</h1>

    <div class="text-danger mb-3">
        @Html.ValidationSummary()
    </div>

    <form method="post">
        <input type="hidden" name="Id" value="@Model.Id" />

        <div class="mb-3">
            <label class="form-label">名前</label>
            <input type="text" name="Name" class="form-control" value="@Model.Name" required />
            <span class="text-danger">@Html.ValidationMessage("Name")</span>
        </div>

        <div class="mb-3">
            <label class="form-label">価格</label>
            <input type="number" name="Price" class="form-control" value="@Model.Price" step="0.01" required />
            <span class="text-danger">@Html.ValidationMessage("Price")</span>
        </div>

        <button type="submit" class="btn btn-primary">更新</button>
        <a href="/Product/Index" class="btn btn-secondary">戻る</a>
    </form>
</div>
